{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "/firebase/configs/*",
        "watchAssets": true,
        "outDir": "dist/src/"
      },
      {
        "include": "/common/i18n/**/*",
        "watchAssets": true,
        "outDir": "dist/src/"
      },
      {
        "include": "/common/templates/**/*",
        "watchAssets": true,
        "outDir": "dist/src/"
      }
    ]
  }
}
